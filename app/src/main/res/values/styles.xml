<resources>

    <!-- Base application theme. -->
    <style name="CrystalBlueAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blueColorPrimary</item>
        <item name="colorPrimaryDark">@color/blueColorPrimaryDark</item>
        <item name="colorAccent">@color/blueColorAccent</item>
    </style>

    <style name="CoralGreenAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/greenColorPrimary</item>
        <item name="colorPrimaryDark">@color/greenColorPrimaryDark</item>
        <item name="colorAccent">@color/greenColorAccent</item>
    </style>

    <style name="SunshineOrangeAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/orangeColorPrimary</item>
        <item name="colorPrimaryDark">@color/orangeColorPrimaryDark</item>
        <item name="colorAccent">@color/orangeColorAccent</item>
    </style>

    <style name="SilverGrayAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/grayColorPrimary</item>
        <item name="colorPrimaryDark">@color/grayColorPrimaryDark</item>
        <item name="colorAccent">@color/grayColorAccent</item>
    </style>

    <style name="BloodyRedAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/redColorPrimary</item>
        <item name="colorPrimaryDark">@color/redColorPrimaryDark</item>
        <item name="colorAccent">@color/redColorAccent</item>
    </style>

    <!--Dark Mode Theme-->
    <style name="DarkCrystalBlueAppTheme" parent="DarkThemeCustomBase">
        <item name="colorAccent">@color/blueColorDarkMode</item>
    </style>

    <style name="DarkCoralGreenAppTheme" parent="DarkThemeCustomBase">
        <item name="colorAccent">@color/greenColorDarkMode</item>
    </style>

    <style name="DarkSunshineOrangeAppTheme" parent="DarkThemeCustomBase">
        <item name="colorAccent">@color/orangeColorDarkMode</item>
    </style>

    <style name="DarkSilverGrayAppTheme" parent="DarkThemeCustomBase">
        <item name="colorAccent">@color/grayColorDarkMode</item>
    </style>

    <style name="DarkBloodyRedAppTheme" parent="DarkThemeCustomBase">
        <item name="colorAccent">@color/redColorDarkMode</item>
    </style>

    <style name="DarkThemeCustomBase" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorBlackPrimary</item>
        <item name="colorPrimaryDark">@color/colorBlackPrimary</item>
        <item name="android:windowBackground">@color/backgroundColorDarkMode</item>
        <item name="actionBarPopupTheme">@style/PopupMenuDark</item>
        <item name="alertDialogTheme">@style/AlertDialogDark</item>

        <item name="android:textColor">@color/colorWhitePrimary</item>
        <item name="android:textColorSecondary">@color/colorWhitePrimary</item>
        <item name="android:textColorPrimary">@color/colorWhitePrimary</item>
        <item name="android:textColorTertiary">@color/colorWhitePrimary</item>
        <item name="android:textColorHint">@color/colorWhitePrimary</item>
        <item name="textColorAlertDialogListItem">@color/colorWhitePrimary</item>
    </style>

    <style name="PopupMenuDark" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@color/colorWhitePrimary</item>
    </style>
    <style name="AlertDialogDark" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:background">@color/backgroundColorDarkMode</item>
        <item name="android:textColor">@color/colorWhitePrimary</item>
    </style>

    <!--Horizontal Grid View for album style-->
    <style name="AlbumHorizontalTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:horizontalSpacing">8dp</item>
        <item name="android:verticalSpacing">8dp</item>
        <item name="android:scrollbarThumbHorizontal">@android:color/transparent</item>
    </style>


</resources>
