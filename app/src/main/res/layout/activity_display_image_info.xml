<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/display_info_image_view"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:background="@drawable/helper_drawable_shadow"
            android:elevation="4dp"
    />

    <TextView
            android:paddingLeft="16dp"
            android:paddingTop="8dp"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IMAGE INFOMATION"
            android:textStyle="bold"/>
    <LinearLayout
            android:orientation="vertical"
            android:paddingTop="2dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    >

        <TextView
                android:id="@+id/display_info_date_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DATE: Unknown"/>

        <TextView
                android:id="@+id/display_info_size_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SIZE: Unknown"/>

        <TextView
                android:id="@+id/display_info_latitude_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LATITUDE: Unknown"/>

        <TextView
                android:id="@+id/display_info_longtitude_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LONGTITUDE: Unknown"/>
    </LinearLayout>
</LinearLayout>