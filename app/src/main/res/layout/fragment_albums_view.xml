<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical">

        <tech.ducletran.travelgallery.CustomizedClass.HorizontalListView
                android:id="@+id/base_album_grid_view"
                style="@style/AlbumHorizontalTheme"
                android:layout_weight="4"
                app:dividerWidth="8dp"
        />

        <TextView
                android:layout_weight="1"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="PHOTOS BY PLACES"
        />

        <tech.ducletran.travelgallery.CustomizedClass.HorizontalListView
                android:id="@+id/location_album_grid_view"
                style="@style/AlbumHorizontalTheme"
                android:layout_weight="4"
                app:dividerWidth="8dp"
        />

        <TextView
                android:layout_weight="1"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="OTHER ALBUMS"
        />

        <tech.ducletran.travelgallery.CustomizedClass.HorizontalListView
                android:id="@+id/others_album_grid_view"
                style="@style/AlbumHorizontalTheme"
                android:layout_weight="4"
                app:dividerWidth="8dp"
        />

</LinearLayout>