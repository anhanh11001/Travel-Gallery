<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
            android:id="@+id/dialog_add_new_page_special_text_layout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:padding="16dp"
                android:text="PAGE'S SPECIAL TEXT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <EditText
                android:singleLine="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:id="@+id/add_new_page_to_story_special_text_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
        />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/dialog_add_new_page_normal_text_layout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PAGE'S NORMAL TEXT"/>
        <EditText
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:id="@+id/add_new_page_to_story_normal_text_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
        />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/dialog_add_new_page_image_layout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PAGE'S IMAGE"/>

        <ImageButton
                android:id="@+id/add_new_page_to_story_image_button"
                android:padding="16dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_launcher_foreground"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </LinearLayout>


</LinearLayout>