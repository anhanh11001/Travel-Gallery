<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="tech.ducletran.travelgallery">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/CrystalBlueAppTheme">
        <activity android:name=".Activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".Activities.DisplayImageActivity"
                android:parentActivityName=".Activities.MainActivity"/>
        <activity android:name=".Activities.SettingsActivity"
                    android:parentActivityName=".Activities.MainActivity"
                    android:label="@string/action_settings"/>

        <activity android:name=".Activities.DisplayImageInfoActivity"
                  android:parentActivityName=".Activities.DisplayImageActivity"/>
    </application>

</manifest>