<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="tech.ducletran.travelgallery">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/CrystalBlueAppTheme">

        <uses-library android:name="org.apache.http.legacy" android:required="false" />
        <meta-data
                android:name="com.google.android.geo.API_KEY"
                android:value="@string/google_map_api_key"/>

        <activity android:name=".Activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".Activities.DisplayImageActivity"/>
        <activity android:name=".Activities.SettingsActivity"
                    android:parentActivityName=".Activities.MainActivity"
                    android:label="@string/action_settings"/>

        <activity android:name=".Activities.DisplayImageInfoActivity"
                  android:parentActivityName=".Activities.DisplayImageActivity"/>
        <activity android:name=".Activities.DisplayAlbumImagesActivity"
                  android:parentActivityName=".Activities.MainActivity"/>
        <activity android:name=".Activities.AddImageToAlbumActivity"
                  android:parentActivityName=".Activities.DisplayAlbumImagesActivity"/>
        <activity android:name=".Activities.DisplaySingleImageMapActivity"
                  android:parentActivityName=".Activities.MainActivity"/>
        <activity android:name=".Activities.DisplayMultipleImageMapActivity"
                  android:parentActivityName=".Activities.MainActivity"/>
        <activity android:name=".Activities.EditInfoActivity"
                  android:parentActivityName=".Activities.DisplayImageInfoActivity"/>
        <activity android:name=".Activities.ImagePickerActivity"/>
    </application>

</manifest>